<h1>New Task</h1>


<%= form_with scope: :task, url: tasks_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :deadline %><br>
    <%= form.text_area :deadline %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', tasks_path %>